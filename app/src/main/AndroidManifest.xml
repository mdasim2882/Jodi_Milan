<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jodimilan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JodiMilan">
        <activity android:name=".ActivityConatiner.Body.ProfileDetailsActivity"></activity>
        <activity android:name=".ActivityConatiner.Body.ui.SelectPlanActivity" />
        <activity
            android:name=".ActivityConatiner.Body.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.JodiMilan.NoActionBar" />
        <activity android:name=".ActivityConatiner.Body.PictureSetter" />
        <activity android:name=".ActivityConatiner.SignUp.RegisterUser.OTPVerificationActivity" />
        <activity
            android:name=".ActivityConatiner.SignUp.RegisterUser.RegisterActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".ActivityConatiner.SignUp.UserLoginActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".ActivityConatiner.SignUp.LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>