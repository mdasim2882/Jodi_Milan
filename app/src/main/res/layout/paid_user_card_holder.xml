<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paidUserCard"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Profile id:"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/dark_green"
            android:textSize="16sp"
            android:fontFamily="@font/catamaran"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/profile_id_db_for_admin"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:padding="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"
            android:text=""
            android:fontFamily="@font/catamaran"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/copyPaidUsers"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:src="@drawable/ic_round_content_copy_24"
            android:layout_height="match_parent"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Purchased Plan:"
                android:textColor="@color/dark_green"
                android:textSize="18sp"
                android:fontFamily="@font/catamaran"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/db_plan_purchased"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/dark_orange"
                android:textSize="18sp"
                android:fontFamily="@font/catamaran"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>