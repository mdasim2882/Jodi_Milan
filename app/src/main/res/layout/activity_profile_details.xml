                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.8"
                            android:fontFamily="@font/catamaran"
                            android:text=" 28/07/1981"
                            android:textColor="@color/dark_brown"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <LinearLayout
